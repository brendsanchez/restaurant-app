<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.dusk.restaurant.controller.BaseFormController"
           fx:id="rootPane">

    <!-- Imagen de fondo -->
    <ImageView fx:id="backgroundImage" preserveRatio="false" smooth="true"/>

    <!-- Contenedor para el formulario flotante a la izquierda -->
    <AnchorPane fx:id="formContainer" prefWidth="350" maxWidth="400"/>
</StackPane>


